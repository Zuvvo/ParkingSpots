<div class="p-3 mb-2 text-white">
  <div class="d-flex align-items-center justify-content-center ">
    <h1>Parking Spot <%= @spot.id %></h1>
  </div>
  <table class="table table-dark">
    <thead>
    <tr>
      <th>Spot number</th>
      <th>Book time</th>
      <th>Will be free at</th>
      <th>Booked by</th>
    </tr>
    </thead>
    <tbody>
    <%= render @spot %>
    </tbody>
  </table>

  <%= form_with model: @spot, url: edit_spot_path(@spot) do |form| %>
    <%= render "shared/form_errors", form: form %>
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 bg-dark text-white-50">
                <p class="mb-5 mx-1 mx-md-4 mt-4"></p>
                <form class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :nickname, autofocus: true, class: "form-control" %>
                      <label class="form-label" for="form3Example4c">Reservation time in days</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :email, class: "form-control", placeholder: "0" %>
                      <label class="form-label" for="form3Example3c">Reservation time in hours</label>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Make a reservation", class: "btn btn-primary btn-lg" %>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end %>

</div>